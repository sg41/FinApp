    "item": [
        {
            "name": "1. Connections Lifecycle",
            "item": [
                {
                    "name": "Инициировать подключение (VBank - Auto-approve)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response contains connection_id and status is correct\", function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.status).to.be.oneOf([\"success_auto_approved\", \"already_initiated\"]);",
                                    "    pm.expect(jsonData).to.have.property(\"connection_id\");",
                                    "    ",
                                    "    if (jsonData.connection_id) {",
                                    "        pm.environment.set(\"connection_id_vbank\", jsonData.connection_id);",
                                    "    }",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"bank_name\": \"vbank\",\n  \"bank_client_id\": \"{{team_id}}-1\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/users/{{user_id}}/connections",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users",
                                "{{user_id}}",
                                "connections"
                            ]
                        }
                    },
                    "response": []
                },
